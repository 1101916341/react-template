{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@store/*": ["src/store/*"],
      "@api/*": ["src/api/*"],
      "@config/*": ["src/config/*"],
      "@routes/*": ["src/routes/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"],
      "@components/*": ["src/components/*"],
      "@style/*": ["src/style/*"]
    },
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "dist"]
}
